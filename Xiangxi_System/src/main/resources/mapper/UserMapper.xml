    </select>
    <select id="selectByUsername" resultType="com.qjn.xiangxi_system.pojo.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
    <select id="findByUsername" resultType="com.qjn.xiangxi_system.pojo.User">
        SELECT * FROM user WHERE username = #{username}
    </select>
</mapper>
